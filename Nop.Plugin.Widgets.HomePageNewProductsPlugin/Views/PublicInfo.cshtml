@model Nop.Plugin.Widgets.HomePageNewProductsPlugin.Models.PublicViewModel
@using Nop.Web.Framework.UI

@{
    Layout = "";
}

<div class="title">
    <h2>Latest products</h2>
</div>
<div class="product-grid">
    <div class="item-grid">
        @foreach (var item in Model.Products)
        {
        <div class="item-box">
            @item.Name
            @item.ProductId
            @item.ShortDescription
        </div>
        }
    </div>

</div>
<br />